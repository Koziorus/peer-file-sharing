{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "Debug with Valgrind and GDB",
          "type": "cppdbg",
          "request": "launch",
          "program": "${workspaceFolder}/build/PeerFileSharing",
          "args": [],
          "stopAtEntry": false,
          "cwd": "${workspaceFolder}",
          "environment": [
            {
                "name": "GNOME_TERMINAL_SCREEN",
                "value": ""
            }
          ],
          "externalConsole": false,
          "MIMode": "gdb",
          "miDebuggerPath": "/usr/bin/gdb",
          "setupCommands": [
              {
                  "description": "Enable pretty-printing for gdb",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": true
              }
              ,
              {
                  "description": "Connect to Valgrind GDB server",
                  "text": "target remote | vgdb"
              }
          ],
          "preLaunchTask": "Run Valgrind with GDB",
          "miDebuggerArgs": "--interpreter=mi2",
          // "logging": {
          //     "engineLogging": true,
          //     "trace": true,
          //     "traceResponse": true
          // }
      }
  ]
}