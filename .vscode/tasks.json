{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Build",
            "type": "shell",
            "command": "cmake --build build --target all",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Build the CMake project"
        },
        {
            "label": "Run Valgrind with GDB",
            "type": "shell",
            "command": "valgrind --vgdb=yes --vgdb-error=0 ${command:cmake.launchTargetPath}",
            "isBackground": true,
            "problemMatcher": [
                {
                    "base": "$gcc",
                    "background": {
                        "activeOnStart": false,
                        "beginsPattern": "target remote | /usr/bin/vgdb", // needed for the launch.json to not wait for the task to finish
                        "endsPattern": "target remote | /usr/bin/vgdb" //
                    }
                }
            ],
            "dependsOn": "CMake Build"
        }
    ]
}
