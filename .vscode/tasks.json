{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Build",
            "type": "shell",
            "command": "cmake --build build --target all",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Build the CMake project"
        },
        {
            "label": "Run Valgrind with GDB",
            "type": "shell",
            "problemMatcher": [],
            "dependsOrder": "sequence",
            "dependsOn":
            [
                "CMake Build",
                "Run Valgrind"
            ]
        },
        {
            "label": "Run Valgrind",
            "type": "shell",
            "command": "./valgrind_start.sh ${command:cmake.launchTargetPath}",
            "problemMatcher": [],
            "isBackground": true
        }
    ]
}
